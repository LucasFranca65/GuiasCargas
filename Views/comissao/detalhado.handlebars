<div  class="table-responsive-xl">   
<div id="content">
    <table  class="table">
    <p style="font-weight: bold;">Periodo: {{periodo.nome}}</p>
    <small>Empresa: {{periodo.empresa}}</small><br>
    <small>Inicio: {{periodo.inicio}}</small><br>
    <small>Final: {{periodo.final}}</small><br>
    <small>Usuario: {{user.nome}}</small><br>
    <div class="table-responsive-xl">
            <table class="table">
                <hr>
                <p style="font-weight: bold;">Detalhamento</p>
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Agencia</th>                                
                            <th scope="col">Indice</th>
                            <th scope="col">Inicio</th>
                            <th scope="col">Fim</th> 
                            <th scope="col">Total</th>
                            <th scope="col">Comissao</th>                                                                                                                                                        
                        </tr>
                    </thead>
                    
                    {{#each comissoes}}
                    <tbody>
                        <tr>                                
                            <td>{{agencia}}</td>                                
                            <td>{{indiceComissao}}%</td>
                            <td>{{dInitExib}}</td>
                            <td>{{dtFimExib}}</td>
                            <td>{{totalExib}}</td>
                            <td>{{valorExib}}</td>                                
                                                        
                        </tr>                                    
                    </tbody>                                        
                    {{else}}            
                        <tbody>
                            <tr>
                                <th scope="row">---</th>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>                               
                            </tr>                                    
                        </tbody>  
                    {{/each}}
                </table>    
                
            </form>
    </div>
</div>
<hr>
    <button onclick="downloadPDF()" class="btn btn-secondary">Imprimir</button>
    <a href="/comissao"><button class="btn btn-outline-secondary">Voltar</button></a> 
</div>