{{#each error}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="table-responsive-xl">

    <form action="/administracao/users/add_user" method="post">
        <table class="table">
            <p style="font-weight: bold;">Cadastrar novo Usuario</p>
            <thead class="table-dark">
                <tr>
                    <th scope="col">Adm</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Login</th>
                    <th scope="col">Perfil</th>
                    <th scope="col">Agencia</th>
                    <th scope="col">Senha</th>
                    <th scope="col">Confirma Senha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="checkbox" name="eAdmin" value="true">
                    </td>
                    <td>
                        <input class="form-control" type="text" name="nome">
                    </td>
                    <td>
                        <input class="form-control" type="text" name="login">
                    </td>
                    <td>
                        <select class="form-select" name="perfil">
                            <option value="selecione">-----selecione-----</option>
                            <option value="AGENTE">AGENTE</option>
                            <option value="FINANCEIRO">FINANCEIRO</option>
                            <option value="ARRECADACAO">ARRECADACAO</option>
                        </select>
                        <small>Selecione apenas se n√£o for administrador</small>
                    </td>
                    <td>
                        <select class="form-select" name="agencia">
                            <option value="selecione">-----selecione-----</option>
                            {{#each agencias}}
                            <option value="{{_id}}">{{cidade}}</option>
                            {{else}}
                            {{/each}}
                        </select>
                    </td>
                    <td>
                        <input class="form-control" type="password" name="senha1">
                    </td>
                    <td>
                        <input class="form-control" type="password" name="senha2">
                    </td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-secondary" type="submit">Salvar</button>
    </form>
</div>

<div class="table-responsive-xl">
    <form action="/administracao/users/dell_user" method="post">
        <table class="table">
            <hr>
            <p style="font-weight: bold;">Usuarios Cadastrados</p>
            <thead class="table-dark">
                <tr>
                    <th scope="col">-</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Agencia</th>
                    <th scope="col">Perfil</th>
                    <th scope="col">Alt. Senha</th>
                </tr>
            </thead>
            {{#each users}}
            <tbody>
                <tr>
                    <th scope="row"><input type="checkbox" name="ident" value="{{_id}}"></th>
                    <td>{{nome}}</td>
                    <td>{{login}}</td>
                    <td>{{agencia.cidade}}</td>
                    <td>{{perfil}}</td>
                    <td><a href="/administracao/users/reset_pass/{{_id}}">reset</a></td>
                </tr>
            </tbody>
            {{else}}
            <tbody>
                <tr>
                    <th scope="row">---</th>
                    <td>---</td>
                    <td>---</td>
                    <td>---</td>
                    <td>---</td>
                    <td><a href=""><button class="btn btn-outline-success btn-sm">reset</button></a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        <button class="btn btn-outline-danger" type="submit">Excluir</button>
    </form>
</div>
</div>