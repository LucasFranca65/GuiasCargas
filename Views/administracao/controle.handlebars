<div class="table-responsive-xl">

        <form action="/administracao/controle/gerar" method="post">
            <table class="table">
                <p style="font-weight: bold;" >Criar Periodo de Controle</p>
                <thead class="table-dark">
                    <tr>                            
                        <th scope="col">Empresa</th>
                        <th scope="col">Mês</th>
                        <th scope="col">Ano</th>                                                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>                                
                        <div class="form-floating">
                            <select name="empresa" class="form-select" id="floatingSelect2" aria-label="Agencia Destino" required>
                                <option value="selecione">---Selecione---</option>
                                <option value="REGIONAL">REGIONAL</option>
                                <option value="JAUA">JAUA</option>
                            </select>
                            <label for="floatingSelect">Empresa</label>
                        </div>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                            <input type="number" class="form-control" name="mes" min="01" max="12" placeholder="00" required>
                            <label for="floatingInput">Mês</label>
                            </div>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                            <input type="number" class="form-control" min="2000" max="2999" name="ano" placeholder="0000" required>
                            <label for="floatingInput">Ano</label>
                            </div>
                        </td>
                    </tr>                                    
                </tbody>
            </table>
            <button class="btn btn-secondary" type="submit">Gerar</button> <button class="btn btn-outline-secondary" type="reset">Limpar</button>
        </form>
</div>
 
    <div class="table-responsive-xl">        
        <form action="/administracao/controle/excluir" method="post">
        <table class="table">
                <hr>
                        <p style="font-weight: bold;">Periodos de Controle Gerados</p>
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Empresa</th>
                                <th scope="col">Inicio</th>
                                <th scope="col">Fim</th> 
                                <th scope="col">-</th>                                                                                               
                            </tr>
                        </thead>
                        {{#each periodos}}
                        <tbody>
                            <tr>                                
                                <td> <a href="/administracao/dadosPeriododeControle/{{nome}}">{{nome}}</a></td>
                                <td>{{empresa}}</td>
                                <td>{{date_init}}</td>
                                <td>{{date_fin}}</td>
                                <th scope="row"><input type="checkbox" name="ident" value="{{_id}}"></th>                               
                            </tr>                                    
                        </tbody>                                        
                        {{else}}            
                            <tbody>
                            <tr>
                                <th scope="row">---</th>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>
                                <td>---</td>                               
                            </tr>                                    
                        </tbody>  
                        {{/each}}
                    </table>    
            <button class="btn btn-outline-danger" type="submit">Excluir</button> 
        </form>
    </div>
</div>