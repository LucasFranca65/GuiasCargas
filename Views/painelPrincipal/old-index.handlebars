<div style=" height: 100px; 
    width: 100% ;
    background-color: rgb(245, 248, 251);
    align-items: center;
    align-content: center;display: flex;
    flex-wrap: wrap;
    justify-content: center;
    flex-direction: column;
    text-align: center;">
  <div>
    <h1>Controle das Agencias</h1>
  </div>

</div>

<div class="mt-4">
  <!-- Barra de Navegação-->
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Viação Regional</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Viação Jaua</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Rapido Santo Antoio</button>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <div class="card mt-4">
            <div class="card-body">
              <h5>Periodo Aberto: </h5>
              <h5>Tota Prestação de Contas: </h5>
              <h5>Total Excesso de Bagagem: </h5>
            </div>
        </div>
        <br>
        {{#if guias}}
        <h3>Guias Pendentes de Baixa</h3><br>
        
          10 Guias mais antigas com pendencia de pagamento</small>
            <div class="card-body">
              <div class="table-responsive-xl">  
                  <table class="table table-bordered fs-6">
                    <thead class="table-dark">
                      <tr>
                        <th scope="col">Conhec.</th>
                        <th scope="col">Origem</th>
                        <th scope="col">Destino</th>                      
                        <th scope="col">Empresa</th>
                        <th scope="col">Entrada</th>
                        <th scope="col">Prev Pag</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Status</th>
                        <th scope="col">Baixa</th>
                        <th scope="col">#</th>
                      </tr>
                    </thead>
                    <form action="/guias/baixar" method="post">
                    {{#each guias}}   
                    <tbody>
                      <tr>
                        <th scope="row"><a href="/guias/selectEdit?id={{_id}}&tipo={{formaPag}}">{{numero}}</a></th>
                        <td>{{origem.cidade}}</td>
                        <td>{{destino.cidade}}</td>                      
                        <td>{{empresa.empresa}}</td>
                        <td>{{date_entrada}}</td>
                        <td>{{date_pagamento}}</td>
                        <td>{{valorExib}}</td>
                        <td>{{formaPag}}</td>
                        <td>{{statusBaixa}}</td>          
                        <td><input type="checkbox" name="ident" value="{{_id}}"></td>
                        <input type="hidden" name="tipo" value="{{formaPag}}">
                      </tr>    
                    </tbody>  
                    {{else}}
                    {{/each}}
                  </table>
                  <button class="btn btn-sm btn-outline-secondary" type="submit">Baixar Selecionados</button>
                </form>
              </div>
              </div>
              {{else}}
              {{/if}}
              <br>
      </div>

    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
      <div class="card mt-4">
          <div class="card-body">
            <h5>Periodo Aberto: </h5>            
            <h5>Bilhetes: </h5>
            <h5>Excesso de Bagagem: </h5>
          </div>
      </div>
    </div>
    
    <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
      <div class="card mt-4">
          <div class="card-body">
            <h5>Periodo Aberto: </h5>
            <h5>Bilhetes: </h5>
            <h5>Excesso de Bagagem: </h5>
          </div>
      </div>
    </div>
  </div>
</div>





          