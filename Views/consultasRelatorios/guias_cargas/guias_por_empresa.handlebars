{{#each error}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h5>Guias Por empresa</h5>

<div style="width: 50%; ">
  <form action="/consultas/guias_cadastradas/por_empresa" method="get" class="d-flex">

    <select name="empresa" id="" class="form-select">
      {{#each empresas}}
      <option value="{{_id}}">{{empresa}}</option>
      {{else}}
      {{/each}}
    </select>
    <button type="submit" class="btn btn-sm btn-secondary ms-2 ">Buscar</button>
  </form>
</div>

<form action="/administracao/guias/excluir" method="post">
  <div class="table-responsive-xl fs-6 mt-5">
    <table class="table table-bordered">
      <thead class="table-dark ">
        <tr class="fs-6">
          <th scope="col">Conh.</th>
          <th scope="col">Origem</th>
          <th scope="col">Destino</th>
          <th scope="col">Cliente</th>
          <th scope="col">Empresa</th>
          <th scope="col">Entrada</th>
          <th scope="col">Vencimento</th>
          <th scope="col">Valor</th>
          <th scope="col">Cond. Pag.</th>
          <th scope="col">Sts. Pag. </th>
          <th scope="col">#</th>
        </tr>
      </thead>
      {{#each dados}}
      <tbody>
        <tr class="fs-6 fst-normal">
          <th scope="row"><a href="/guias/selectEdit/{{_id}}">{{numero}}</a></th>
          <td>{{origem.cidade}}</td>
          <td>{{destino.cidade}}</td>
          <td>{{cliente.name_client}}</td>
          <td>{{empresa.empresa}}</td>
          <td>{{date_entrada}}</td>
          <td>{{date_vencimento}}</td>
          <td>{{valor_exib}}</td>
          <td>{{condPag}}</td>
          <td>{{statusBaixa}}</td>
          <td><input id="ckbox" type="checkbox" name="id" value="{{_id}}"></td>
        </tr>
      </tbody>
      {{else}}
      {{/each}}
    </table>
  </div>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item {{prev}}">
        <a class="page-link "
          href="/consultas/guias_cadastradas/por_empresa?empresa={{empresaSelec}}&offset={{prevUrl.ofst}}&page={{prevUrl.pag}}">Anterior</a>
      </li>
      <li class="page-item"><a class="page-link">-- {{page}} --</a></li>
      <li class="page-item {{next}}">
        <a class="page-link "
          href="/consultas/guias_cadastradas/por_empresa?empresa={{empresaSelec}}&offset={{nextUrl.ofst}}&page={{nextUrl.pag}}">Proximo</a>
      </li>
    </ul>
  </nav>
  <button class="btn btn-sm btn-outline-danger" type="submit">Excluir Selecionados</button>
</form>