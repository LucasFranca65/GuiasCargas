<form action="/consultas/buscar_guias/pesquisar" method="get">
    <h3>Buscador de Guias</h3>
    <div class="table-responsive-xl  ">
        <table class="table shadow p-2">
            <thead class="table-secondary">
                <tr>
                    <th scope="col">Agencia</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Empresa</th>
                    <th scope="col">Data Inicial</th>
                    <th scope="col">Data Final</th>
                    <th scope="col">Status Pag</th>
                    <th scope="col">Status Ent</th>
                </tr>
            </thead>
            <tbody>
                <td>
                    <select name="agencia" class="form-select" id="floatingSelect2" aria-label="agencia">
                        <option value="">Todas</option>
                        {{#each agencias}}
                        <option value="{{_id}}">{{numero}} - {{cidade}}</option>
                        {{else}}
                        {{/each}}
                    </select>
                </td>
                <td>
                    <select name="cliente" class="form-select" id="floatingSelect2" aria-label="agencia">
                        <option value="">Todos</option>
                        {{#each clientes}}
                        <option value="{{_id}}">{{name_client}}</option>
                        {{else}}
                        {{/each}}
                    </select>
                </td>
                <td>
                    <select name="empresa" class="form-select" id="floatingSelect2" aria-label="agencia">
                        <option value="">Todas</option>
                        {{#each empresas}}
                        <option value="{{_id}}">{{empresa}}</option>
                        {{else}}
                        {{/each}}
                    </select>
                </td>
                <td><input type="date" class="form-control" name="dateMin" required></td>
                <td><input type="date" class="form-control" name="dateMax" required></td>
                <td>
                    <select name="statusPag" class="form-select" id="floatingSelect2" aria-label="agencia">
                        <option value="">Todas</option>
                        <option value="true">Paga</option>
                        <option value="false">Pendente</option>
                    </select>
                </td>
                <td>
                    <select name="statusEntre" class="form-select" id="floatingSelect2" aria-label="agencia">
                        <option value="">Todas</option>
                        <option value="true">Entregue</option>
                        <option value="false">Pendente</option>

                    </select>
                </td>
                </tr>
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-outline-success btn-sm">Buscar</button>
</form>
<hr>

