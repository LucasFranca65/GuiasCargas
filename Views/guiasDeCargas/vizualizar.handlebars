{{#each erro}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<form action="/guias/editar" method="POST" >
<input type="hidden" name="id" value="{{guia._id}}">

  <h3>Editar guia</h3>
  <p>Por: {{guia.user}}</p>
<div class="table-responsive-xl">
<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">Conhecimento</th>
      <th scope="col">Origem</th>
      <th scope="col">Destino</th>
      <th scope="col">Cliente</th>
      <th scope="col">Empresa</th>      
    </tr>
  </thead>  
  <tbody>
    <tr>
      <td>
        <div class="form-floating mb-3">
        <input type="number" value="{{guia.numero}}" class="form-control" name="numero" placeholder="Valor da Guia" disabled >
        <label for="floatingInput">Numero Conhecimento</label>
        </div>
      </td>
      <td>
        <div class="form-floating">
          <select name="origem" class="form-select" id="floatingSelect" aria-label="Agencia Origem">        
            <option value={{guia.origem}}>{{guia.origem}}</option><hr>
            {{#each agencias}}
            <option value="{{cidade}}">{{cidade}}-{{uf}}</option>
            {{else}}
            {{/each}}                              
          </select>
        <label for="floatingSelect">Agencia Origem</label> 
        </div>
      </td>
      <td>
        <div class="form-floating">
          <select name="destino" class="form-select" id="floatingSelect2" aria-label="Agencia Destino">        
            <option value={{guia.destino}}>{{guia.destino}}</option>         
            {{#each agencias}}
            <option value="{{cidade}}">{{cidade}}-{{uf}}</option>
            {{else}}
            {{/each}}                                
          </select>  
        <label for="floatingSelect2">Agencia de Destino</label>
        </div>
      </td>
      <td>
        <div class="form-floating mb-3">
        <input type="text" value="{{guia.cliente}}" name="cliente" class="form-control" id="floatingInput" placeholder="Cliente">
        <label for="floatingInput">Cliente</label>
        </div>
      </td>
      <td>
        <div class="form-floating">
        <select name="empresa"  class="form-select" id="floatingSelect2" aria-label="Agencia Destino">
          <option value="{{guia.empresa}}">{{guia.empresa}}</option>
          <option value="REGIONAL">REGIONAL</option>
          <option value="JAUA">JAUA</option>
        </select>
        <label for="floatingSelect">Empresa</label>
        </div>
      </td>      
    </tr>          
  </tbody> 
</table>
<table class="table">
  <thead class="table-dark">
    <tr>      
      <th scope="col">Entrada</th>
      <th scope="col">Pagamento</th>
      <th scope="col">Valor</th>
      <th scope="col">Status </th>
      <th scope="col">Baixa </th>
    </tr>
  </thead> 
  <tbody>
    <tr>      
      <td><input type="date" value="{{guia.date_entrada}}" class="form-control" name="dateEntrada"></td>
      <td><input type="date" value="{{guia.date_pagamento}}"  class="form-control" name="datePagamento"></td>
      <td>
        <div class="input-group mb-3">
        <span class="input-group-text">R$</span>
        <span class="input-group-text">0.00</span>
        <input name="valor" value="{{guia.valor}}" type="number" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
      </div>
  </td>
      <td>
        <select name="statusPagamento" class="form-select" required>
          <option value="{{guia.statusPag}}">{{guia.statusPag}}</option>
          <option value="PAGO">PAGO</option>
          <option value="A COBRAR">A COBRAR</option>
          <option value="CONTA CORRENTE">CONTA CORRENTE</option>
          <option value="CONTA CORRENTE">CANCELADO</option>
        </select>
      </td>
      <td><input type="checkbox" {{guia.check}} name="baixa" value="true">Baixado</td>
    </tr>          
  </tbody>
</table>
</div>
  <button class="btn btn-secondary" type="submit">Alterar</button>  
</form>
<a href="/administracao/guias/exclusao/{{guia_id}}"><button class="btn btn-outline-danger mt-2">Excluir</button></a>
<a href="/guias"><button class="btn btn-outline-secondary mt-2" type="reset">Cancelar</button></a>
