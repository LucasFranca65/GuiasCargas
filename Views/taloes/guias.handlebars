<h3>Guias do talão</h3>
<p>Numero: {{talao.numeroControle}}</p>
<p>Guia Inicial: {{talao.numeroInicial}}</p>
<p>Guia Final: {{talao.numeroFinal}}</p>
<p>Data de Cadastro: {{talao.date_exib}}</p>
<hr>
<div class="table-responsive-xl fs-6">  
      <table class="table table-bordered">
          <thead class="table-dark">
            <tr>
              <th scope="col">Nº</th>
              <th scope="col">Conhec.</th>
              <th scope="col">Origem</th>
              <th scope="col">Destino</th>
              <th scope="col">Cliente</th>
              <th scope="col">Empresa</th>
              <th scope="col">Entrada</th>
              <th scope="col">Pagamento</th>
              <th scope="col">Valor</th>
              <th scope="col">Status </th>
              <th scope="col">Baixa </th>
              <th scope="col">#</th>
            </tr>
          </thead>          
         {{#each dados}}    
          <tbody>
            <tr>
              <th scope="row"><a href="/guias/selectEdit/{{_id}}">{{n}}</a></th>             
              <td>{{numero}}</td>
              <td>{{origem}}</td>
              <td>{{destino}}</td>
              <td>{{cliente}}</td>
              <td>{{empresa}}</td>
              <td>{{date_entrada}}</td>
              <td>{{date_pagamento}}</td>
              <td>{{valor_exib}}</td>
              <td>{{statusPag}}</td>  
              <td>{{statusBaixa}}</td>             
              <td><input type="checkbox" name="id" value="{{_id}}"></td>
            </tr>    
          </tbody> 
          {{else}}
        {{/each}}   
</table>
<hr>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item {{prev}}">
      <a class="page-link" href="/talao/guias?ident={{talao._id}}&offset={{prevUrl.ofst}}&page={{prevUrl.pag}}">Anterior</a>
    </li>
    <li class="page-item"><a class="page-link">-- {{page}} --</a></li>
    <li class="page-item {{next}}">
    <a class="page-link" href="/talao/guias?ident={{talao._id}}&offset={{nextUrl.ofst}}&page={{nextUrl.pag}}">Proximo</a>
    </li>
  </ul>
</nav> 