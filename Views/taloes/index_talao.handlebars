<div style="padding: ;">
  {{#each erro}}
  <div class="alert alert-danger">{{text}}</div>
  {{else}}
  {{/each}}
  <form action="/talao/adicionar" method="POST">
    <h4>Adicionar Talões</h4>
    <div class="table-responsive-xl">
      <table class="table shadow">
        <thead class="table-secondary">
          <tr>
            <th scope="col">NºControle</th>
            <th scope="col">Agencia</th>
            <th scope="col">Nº Inicial</th>
            <th scope="col">Nº Final</th>
            <th scope="col">Tipo</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="form-floating mb-3">

                <p>{{numCont}}</p>
                <input type="hidden" name="numCont" value="{{numCont}}">
              </div>
            </td>
            <td>
              {{#if user.eAdmin}}
              <div class="form-floating">
                <select name="agencia" class="form-select" id="floatingSelect" aria-label="Agencia Origem">
                  <option value="selecione">---Selecione---</option>
                  {{#each agencias}}
                  <option value="{{_id}}">{{cidade}}</option>
                  {{else}}
                  {{/each}}
                </select>
                <label for="floatingSelect">Agencia</label>
              </div>
              {{else}}
              <p>{{agencia.cidade}}</p><input type="hidden" name="agencia" value="{{agencia._id}}">
              {{/if}}
            </td>
            <td>
              <div class="form-floating mb-3">
                <input type="number" class="form-control" name="numInit" min="10000" max="99999" placeholder="00000">
                <label for="floatingInput">Número Inicial</label>
              </div>
            </td>
            <td>
              <div class="form-floating mb-3">
                <input type="number" class="form-control" name="numFin" min="10000" max="99999" placeholder="00000">
                <label for="floatingInput">Número Final</label>
              </div>
            </td>
            <td>
              <div class="form-floating">
                <select name="tipo" class="form-select" id="floatingSelect2" aria-label="Tipo de Talão">
                  <option value="selecione">---Selecione---</option>
                  <option value="PRESTACAO CONTAS">PRESTACAO CONTAS</option>
                  <option value="ENCOMENDAS">ENCOMENDAS</option>
                </select>
                <label for="floatingSelect">Tipo de Talão</label>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

      <button class="btn btn-secondary btn-sm" type="submit">Gravar</button>
      <button class="btn btn-outline-secondary btn-sm" type="reset">Limpar</button>
  </form>

  <br><br>
  <h4>Talões Cadastraddos</h4>
  <div class="table-responsive-xl">
    <table class="table table-bordered fs-6 shadow">
      <thead class="table-secondary">
        <tr>
          <th scope="col">Nº</th>
          <th scope="col">Agencia</th>
          <th scope="col">Nº Inicial</th>
          <th scope="col">Nº Final</th>
          <th scope="col">Tipo</th>
          <th scope="col">Data Cadastro</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <form action="/talao/excluir" method="post">
        {{#each taloes}}
        <tbody>
          <tr>
            <th scope="row"><a href="/talao/guias?ident={{_id}}">{{numeroControle}}</a></th>
            <td>{{agencia.cidade}}</td>
            <td>{{numeroInicial}}</td>
            <td>{{numeroFinal}}</td>
            <td>{{tipo}}</td>
            <td>{{date_exib}}</td>
            <td><input type="checkbox" name="ident" value="{{_id}}"></td>
          </tr>
        </tbody>
        {{else}}
        {{/each}}
    </table>
    <button class="btn btn-sm btn-outline-danger shadow" type="submit">Excluir Selecionados</button>
    </form>
  </div>
</div>